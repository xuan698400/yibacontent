<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white">
    
    <!-- 头部标题部分 -->
    <RelativeLayout 
        android:id="@+id/title"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp">
        
        <TextView 
            android:layout_width="fill_parent"
    		android:layout_height="40dp"
    		android:background="@drawable/blue_title"
    		android:text="@string/jie_guo_ybdtg"
    		android:gravity="center"
    		android:textColor="@color/color_white"
    		android:textSize="20dp" />
        
    </RelativeLayout>
    
    <!-- 原文部分 -->
    <RelativeLayout 
        android:id="@+id/from"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/color_C2C2C2"
    	android:layout_below="@+id/title"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:paddingBottom="10dp"
    	android:paddingTop="20dp">
        
        <EditText 
            android:id="@+id/fromWord"
            android:layout_width="fill_parent"
    		android:layout_height="150dp"
    		android:hint="@string/shu_ru_yfydnr"
    		android:inputType="textMultiLine"
    		android:gravity="top" />
        
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/zou_yi_g"
    		android:layout_below="@+id/fromWord"
    		android:background="@drawable/btn_1"
    		android:layout_marginTop="10dp"
    		android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    
    <!-- 原文部分 -->
    <RelativeLayout 
        android:id="@+id/to"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/from"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:paddingTop="10dp">
        
        <TextView 
            android:id="@+id/toWord"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textColor="@color/color_black"
    		android:textSize="20sp" />
        
        <TextView 
            android:id="@+id/explain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a9a9a9"
            android:textSize="15sp"
            android:layout_below="@+id/toWord"
            android:layout_marginTop="10dp" />
        
        <TextView 
            android:id="@+id/explainWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a9a9a9"
            android:textSize="15sp"
            android:layout_below="@+id/explain" />
        
    </RelativeLayout>
    
</RelativeLayout>
